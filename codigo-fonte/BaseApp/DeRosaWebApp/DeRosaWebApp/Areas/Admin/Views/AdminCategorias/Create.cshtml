@model DeRosaWebApp.Models.Categoria

@{
    ViewData["Title"] = "Criar categoria";
}

<h4 class="cat-title">Nova categoria</h4>
<hr />

<div>
    <a asp-action="Index" class="create-button">Voltar para a lista</a>
</div>

<div class="row custom-cat">
    <div class="col-md-4 test-criar">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoriaNome" class="control-label"></label>
                <input asp-for="CategoriaNome" class="form-control" />
                <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="create-button" />
            </div>
        </form>
    </div>
</div>

<style>

    * {
        font-family: Montserrat;
    }
</style>