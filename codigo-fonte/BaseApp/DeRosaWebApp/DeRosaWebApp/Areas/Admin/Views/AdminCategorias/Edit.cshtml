@using DeRosaWebApp.Areas.Admin.ViewModel;
@model CategoriaViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit" asp-controller="AdminCategorias" asp-area="Admin" asp-route-id="@Model._Categoria.IdCategoria">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="_Categoria.IdCategoria" />
            <div class="form-group">
                <label asp-for="_Categoria.CategoriaNome" class="control-label"></label>
                <input asp-for="_Categoria.CategoriaNome" class="form-control" />
                <span asp-validation-for="_Categoria.CategoriaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>