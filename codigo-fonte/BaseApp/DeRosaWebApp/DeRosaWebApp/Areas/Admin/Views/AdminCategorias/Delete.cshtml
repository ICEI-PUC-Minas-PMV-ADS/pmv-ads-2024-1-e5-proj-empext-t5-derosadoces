@model DeRosaWebApp.Models.Categoria

@{
    ViewData["Title"] = "Deletar";
}

@* <h3>Tem certeza que deseja deletar essa categoria?</h3> *@
<div>
    <h4 class="cat-title">Deletar categoria</h4>
    <hr />

    <div class="btn-edit-div">
        <a asp-action="Index" class="btn">Voltar </a>
    </div>

</div>

<div class="custom-cat-detail">
    <div class="tab-detail">
        <table class="table-cat-detail">
            <tr>
                <th>@Html.DisplayNameFor(model => model.CategoriaNome)</th>
                <th>@Html.DisplayNameFor(model => model.IdCategoria)</th>
                <th></th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(model => model.CategoriaNome)</td>
                <td>@Html.DisplayFor(model => model.IdCategoria)</td>
                <td>
                    <div class="btn-edit-div">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="IdCategoria" />
                            <input type="submit" value="Deletar" class="btn" />
                        </form>
                    </div>
                </td>
            </tr>
        </table>
    </div>

    <style>

        * {
            font-family: Montserrat;
        }
    </style>
