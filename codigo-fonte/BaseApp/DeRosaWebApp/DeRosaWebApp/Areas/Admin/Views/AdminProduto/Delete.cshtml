@model ActionResult<Produto>

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar isso?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Value.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Value.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value.Preco)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Value.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value.Quantidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Value.ImagemUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value.ImagemUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Value.DescricaoCurta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value.DescricaoCurta)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Value.PrecoSecundario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value.PrecoSecundario)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Value.IdCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value.IdCategoria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.Value.Cod_Produto" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>