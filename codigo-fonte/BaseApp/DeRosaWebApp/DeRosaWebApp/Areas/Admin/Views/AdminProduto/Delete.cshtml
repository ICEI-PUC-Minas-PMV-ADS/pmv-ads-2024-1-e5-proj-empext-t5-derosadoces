@using DeRosaWebApp.Areas.Admin.ViewModel;
@using System.Globalization;
@model ProdutoCategoriaViewModel
@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3 class="text-center">Tem certeza que deseja deletar este produto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model._Produto.Cod_Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model._Produto.Cod_Produto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model._Produto.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model._Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model._Produto.Preco)
        </dt>
        <dd class="col-sm-10">
            R$@Model._Produto.Preco.ToString("F2",CultureInfo.InvariantCulture)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model._Produto.EmEstoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model._Produto.EmEstoque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model._Produto.ImagemUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model._Produto.ImagemUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model._Produto.DescricaoCurta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model._Produto.DescricaoCurta)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model._Produto.PrecoSecundario)
        </dt>
        <dd class="col-sm-10">
            R$@Model._Produto.PrecoSecundario.ToString("F2",CultureInfo.InvariantCulture)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model._Categoria.IdCategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model._Categoria.IdCategoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model._Categoria.CategoriaNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model._Categoria.CategoriaNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model._Produto.Cod_Produto" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>