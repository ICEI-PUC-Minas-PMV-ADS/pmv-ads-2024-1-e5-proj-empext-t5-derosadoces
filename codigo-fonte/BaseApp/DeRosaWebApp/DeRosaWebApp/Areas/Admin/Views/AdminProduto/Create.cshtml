@model Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Nome" class="control-label"></label>
                <input asp-for="@Model.Nome" class="form-control" />
                <span asp-validation-for="@Model.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Preco" class="control-label"></label>
                <input asp-for="@Model.Preco" class="form-control" />
                <span asp-validation-for="@Model.Preco" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="@Model.EmEstoque" class="control-label"></label>
                <input asp-for="@Model.EmEstoque" class="form-control" />
                <span asp-validation-for="@Model.EmEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImagemUrl" class="control-label"></label>
                <input asp-for="@Model.ImagemUrl" class="form-control" />
                <span asp-validation-for="@Model.ImagemUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DescricaoCurta" class="control-label"></label>
                <input asp-for="@Model.DescricaoCurta" class="form-control" />
                <span asp-validation-for="@Model.DescricaoCurta" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.PrecoSecundario" class="control-label"></label>
                <input asp-for="@Model.PrecoSecundario" class="form-control" />
                <span asp-validation-for="@Model.PrecoSecundario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.IdCategoria" class="control-label"></label>
                <input asp-for="@Model.IdCategoria" class="form-control" />
                <span asp-validation-for="@Model.IdCategoria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ProdutoDaSemana" class="control-label">Produto da Semana</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="produtoSemanaSim" name="ProdutoSemana" value="1" checked>
                    <label class="form-check-label" for="produtoSemanaSim">Sim</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="produtoSemanaNao" name="ProdutoSemana" value="0">
                    <label class="form-check-label" for="produtoSemanaNao">Não</label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>
