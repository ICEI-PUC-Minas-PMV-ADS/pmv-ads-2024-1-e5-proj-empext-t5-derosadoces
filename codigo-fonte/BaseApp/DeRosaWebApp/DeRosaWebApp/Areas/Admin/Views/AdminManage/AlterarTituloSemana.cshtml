@using DeRosaWebApp.Models.Management;
@model ManagementHome
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    .container {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 40px;
    }

    .btn {
        border: none;
        color: white;
        padding: 10px 15px;
        margin-top: 10px;
        border-radius: 4px;
        cursor: pointer;
        display: block; /* Faz o botão ocupar a linha inteira */
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    label {
        font-weight: 600;
        color: #495057;
    }

    hr {
        border-top: 1px solid #ccc;
    }

    select.form-control {
        height: calc(2.25rem + 2px);
    }

    .alert-light {
        background-color: #fefefe;
        padding: 5px;
        margin-top: 10px;
    }
</style>



@{
    ViewData["Title"] = "Alterar Título da Semana";
}

<div class="container">
    <h1>Alterar Título da Semana</h1>
    <hr />

    <form asp-controller="AdminManage" asp-action="AlterarTituloSemana" method="post">
        <div asp-validation-summary="All" class="alert-light"></div>
        <div class="form-group">
            <label asp-for="@Model.TituloSemana" class="control-label">Título Atual da Semana</label>
            <textarea asp-for="@Model.TituloSemana" id="titulo" class="form-control" rows="5">@Model.TituloSemana</textarea>
        </div>
        <div class="form-group">
            <label for="fontTypeSelector">Fonte do Texto</label>
            <select asp-for="@Model.Font" class="form-control" id="fontTypeSelector">
                <option value="Arial">Arial</option>
                <option value="Verdana">Verdana</option>
                <option value="Times New Roman">Times New Roman</option>
                <option value="Courier New">Courier New</option>
                <option value="licorice">Licorice</option>
            </select>
        </div>
        <span class="text-sm-center" style="color:gray;"><i>O tamanho da fonte não pode ser alterado.(Não se preocupe, ela se ajustará ao site)</i></span>

        <div class="form-group">
            <label for="fontColorPicker">Cor do Texto</label>
            <input asp-for="@Model.Color" type="color" class="form-control" id="fontColorPicker" style="width:10%; height: 5vh;">
        </div>
        <div class="form-group">
            <input type="submit" id="btnsmall" value="Salvar Alterações" class="btn" />
        </div>
    </form>
    <a class="btn" id="btnsmall" asp-area="Admin" asp-controller="AdminManage" asp-action="Index">Voltar</a>
</div>

<script>
    document.getElementById('fontColorPicker').addEventListener('input', function () {
        document.getElementById('titulo').style.color = this.value;
    });

    document.getElementById('fontTypeSelector').addEventListener('change', function () {
        document.getElementById('titulo').style.fontFamily = this.value;
    });
</script>