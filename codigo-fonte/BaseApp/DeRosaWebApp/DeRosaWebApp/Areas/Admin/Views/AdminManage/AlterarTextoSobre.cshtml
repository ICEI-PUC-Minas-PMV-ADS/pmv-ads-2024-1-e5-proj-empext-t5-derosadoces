@model string
@{
    ViewData["Title"] = "Alterar Texto Sobre";
}

<div class="container mt-5">
    <h1>Alterar Texto da Seção Sobre</h1>
    <hr />

    <form asp-controller="AdminManage" asp-action="AlterarTextoSobre" method="post">
        <div class="form-group">
            <label asp-for="@Model" class="control-label">Texto Atual</label>
            <textarea asp-for="@Model" id="textoSobre" name="textoSobre" class="form-control" rows="5">@Model</textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Salvar Alterações" class="btn" id="btnsmall" />
        </div>
    </form>
    <a class="btn" asp-area="Admin" asp-controller="AdminManage" asp-action="Index" id="btnsmall">Voltar</a>

</div>