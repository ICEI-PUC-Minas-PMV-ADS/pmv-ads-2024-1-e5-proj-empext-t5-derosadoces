@model TodosProdutosViewModel

<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

@{
    ViewData["Title"] = "Todos os Produtos";
}

<h2 class="text-center mb-4">@ViewBag.Title</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group" id="list-tab" role="tablist">
                @foreach(Categoria categoria in Model._Categorias)
                {
                    <a asp-controller="Produto" asp-action="ProdutoByCategoria" asp-route-cod_categoria="@categoria.IdCategoria" class="list-group-item list-group-item-action">@categoria.CategoriaNome</a>
                }
            </div>
        </div>
        <div class="col-md-9">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="list-all" role="tabpanel" aria-labelledby="list-all-list">
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        @foreach (var produto in Model._Produtos)
                        {
                            <div class="col" data-category="@produto.IdCategoria">
                                <div class="card h-100">
                                    @if (produto.ImagemUrl.Contains("www") || produto.ImagemUrl.Contains("http") || produto.ImagemUrl.Contains("https"))
                                    {
                                        <img class="card-img-top" src="@produto.ImagemUrl" alt="Imagem do produto @produto.Nome" />
                                    }
                                    else
                                    {
                                        <img class="card-img-top" src="/Imagens/@produto.ImagemUrl" alt="Imagem do produto @produto.Nome" />
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@produto.Nome</h5>
                                        <p class="card-text">@produto.DescricaoCurta</p>
                                        <p class="card-text"><small class="text-muted">Preço: R$ @produto.Preco.ToString("N2")</small></p>
                                    </div>
                                    <div class="card-footer">
                                        <a class="btn" asp-controller="Produto" asp-action="ProdutoDetalhe" method="get" asp-route-cod_produto="@produto.Cod_Produto" role="button">Detalhes</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- Outras tabs para categorias específicas -->
            </div>
        </div>
    </div>
</div>
