@model DeRosaWebApp.Models.Endereco

@{
    ViewData["Title"] = "Editar Endereço";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="col-md-12 container_botao_voltar">
            <a class="btn btn-primary" onclick="window.history.back();">
                Voltar
            </a>
        </div>
        <form asp-action="EditEndereco">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="CEP"></label>
                <input asp-for="CEP" id="cep" class="form-control" onblur="pesquisacep(this.value);" />
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UF"></label>
                <input asp-for="UF" id="uf" class="form-control" readonly />
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade"></label>
                <input asp-for="Cidade" id="cidade" class="form-control" readonly />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logradouro"></label>
                <input asp-for="Logradouro" id="rua" class="form-control" />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complemento"></label>
                <input asp-for="Complemento" class="form-control" />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro"></label>
                <input asp-for="Bairro" id="bairro" class="form-control" readonly />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id_User" value="@Model.Id_User" />

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Atualizar Endereço" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("_ConsultaCEP");
    }
}
