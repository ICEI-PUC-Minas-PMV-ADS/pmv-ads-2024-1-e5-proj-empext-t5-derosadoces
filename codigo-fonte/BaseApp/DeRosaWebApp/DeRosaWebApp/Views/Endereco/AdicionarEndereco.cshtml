@model DeRosaWebApp.Models.Endereco


<h2>@ViewData["Adicionar endereço"]</h2>

<h6>@ViewBag.Sucesso</h6>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="col-md-12 container_botao_voltar">
            <a class="btn btn-primary" onclick="window.history.back();">
                Voltar
            </a>
        </div>
        <form class="form-cadastro" asp-action="AdicionarEndereco" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-8 container-input input-pequeno">
                @*<label asp-for="CEP"></label>*@
                <input asp-for="CEP" id="cep" class="form-control" onblur="pesquisacep(this.value);" placeholder="CEP" />
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>

            <div class="col-md-8 container-input input-pequeno">
                @*<label asp-for="Logradouro" class="control-label"></label>*@
                <input asp-for="Logradouro" id="rua" class="form-control" placeholder="Rua" />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>

            <div class="col-md-8 container-input input-pequeno">
                @*<label asp-for="Numero" class="control-label"></label>*@
                <input asp-for="Numero" class="form-control" placeholder="Número" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <div class="col-md-8 container-input input-pequeno">
                @*<label asp-for="Complemento" class="control-label"></label>*@
                <input asp-for="Complemento" class="form-control" placeholder="Complemento" />
            </div>

            <div class="col-md-8 container-input input-pequeno">
                @*<label asp-for="Bairro" class="control-label"></label>*@
                <input asp-for="Bairro" id="bairro" class="form-control" placeholder="Bairro" />
            </div>

            <div class="col-md-8 container-input input-pequeno">
                @*<label asp-for="Cidade" class="control-label"></label>*@
                <input asp-for="Cidade" id="cidade" class="form-control" placeholder="Cidade" />
            </div>

            <div class="col-md-8 container-input input-pequeno">
                @*<label asp-for="UF" class="control-label"></label>*@
                <input asp-for="UF" id="uf" class="form-control" placeholder="UF" />
            </div>

            <div class="btn-cadastrar-container">
                <input type="submit" value="Adicionar Endereço" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("_ConsultaCEP");
    }
}
