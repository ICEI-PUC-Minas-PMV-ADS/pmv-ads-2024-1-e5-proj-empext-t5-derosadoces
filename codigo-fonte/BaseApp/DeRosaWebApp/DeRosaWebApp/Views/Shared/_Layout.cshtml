@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DeRosaWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DeRosaWebApp.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Licorice&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

   
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom border-bottom box-shadow mb-1">
            <div class="container-fluid">
                <a class="navbar-brand"  asp-controller="Home" asp-action="Index"><img src="~/Imagens/Rosa_DeRosa-black.png" width="60px" height="55px" /></a>
                 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> 
                <div class="navbar-collapse collapse d-sm-inline-flex  justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @* Temporário, apenas para ter os itens da nav *@
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Produto" asp-action="Produtos">Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Sobre">Sobre</a>
                        </li>

                        <li class="nav-item ">
                            @await Component.InvokeAsync("CarrinhoComponent")
                        </li>
                      
                    </ul>
                    <ul class="nav navbar-nav navbar-left">
                        <li class="nav-item ">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @inject UserManager<IdentityUser> UserManager
                                <a class="nav-link" style=@*"color: lightgray;"*@  asp-controller="Pedido" asp-action="MeusPedidos" asp-route-user_id="@UserManager.GetUserId(User)">Meus Pedidos</a>
                            }
                        </li>
                    </ul>
                    @await Html.PartialAsync("_LoginPartial") 
                    @await Html.PartialAsync("_AdmPartial")
                </div>
            </div>
        </nav>
    </header>
    <div class="container-aguardando-edu">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top footer text-muted">
        <div class="container-footer">
            <img src="~/Imagens/Rosa_DeRosa.png" width="55px" height="50px" />
            &copy; 2024 - DeRosaWebApp 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
