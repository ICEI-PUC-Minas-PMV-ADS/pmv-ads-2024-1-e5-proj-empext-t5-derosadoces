@using DeRosaWebApp.Models.Management;
@model ManagementSobre
@{
    ViewData["Title"] = "Entre em Contato";
}

<div class="meus-contatos">
    <h1>Entre em Contato</h1>
    <br />
    <p>Se você tem alguma dúvida, reclamação ou sugestão, por favor entre em contato conosco. Estamos aqui para ajudar!</p>
    <p>Aqui você pode fazer contato direto sobre dúvidas:</p>
    <div class="contact-cards">
