@model RedefinirSenhaViewModel
@{
    ViewBag.Subtitulo = "Redefinição de Senha";
}

<h1 class="text-primary">Redefinição de Senha</h1>
<hr>

<partial name="_MensagemPartial" />

<div asp-validation-summary="ModelOnly" class="val-summary text-danger my-3"></div>

<form asp-action="RedefinirSenha" class="row">
    <input type="hidden" asp-for="@Model.Token">

    <div class="form-group mb-3 col-4">
        <label asp-for="@Model.Email"></label><br>
        <input asp-for="@Model.Email" class="form-control" autofocus autocomplete="off">
    </div>
    <span asp-validation-for="@Model.Email" class="text-danger"></span>

    <div class="w-100 mt-3"></div>
    <div class="form-group mb-3 col-4">
        <label asp-for="@Model.NovaSenha"></label><br>
        <input asp-for="@Model.NovaSenha" class="form-control">
    </div>
    <span asp-validation-for="@Model.NovaSenha" class="text-danger"></span>

    <div class="w-100 mt-3"></div>
    <div class="form-group mb-3 col-4">
        <label asp-for="@Model.ConfNovaSenha"></label><br>
        <input asp-for="@Model.ConfNovaSenha" class="form-control">
    </div>
    <span asp-validation-for="@Model.ConfNovaSenha" class="text-danger"></span>

    <div class="w-100"></div>
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Redefinir</button>
    </div>
</form>