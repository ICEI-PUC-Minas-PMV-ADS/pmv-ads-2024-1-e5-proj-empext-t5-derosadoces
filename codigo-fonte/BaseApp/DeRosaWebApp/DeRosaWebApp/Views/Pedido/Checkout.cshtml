@model DateTime
<div class="checkout-container">
    <div class="main-checkout">
        <a class="btn btn-success" asp-action="EscolhaEndereco" asp-controller="Endereco" id="btnsmall">Voltar</a>
        <h2 class="checkout-title">Checkout</h2>
        @if (ViewBag.Erro != null)
        {
            <h6 style="color:red">@ViewBag.Erro</h6>
        }

        <form asp-action="Checkout" method="post">
            <div class="form-group custom-checkout">
                <label for="dataParaEntregar">Data para entrega:</label>
                <p style="color: gray; font-size: small">
                    (A data para entrega depende da demanda e da disponibilidade da empresa, acompanhe o status do pedido em 'Meus pedidos' para ficar por dentro da data
                    da entrega)
                </p>
                @if (ViewBag.EntregaPedidoNormal != null)
                {
                    <p>Seu pedido será entrega na próxima sexta feira disponível: @ViewBag.DataEntrega</p>
                }
                else
                {
                    <input type="date" id="dataParaEntregar" name="dataParaEntregar" class="form-control" required />
                }
            </div>
            <button type="submit" class="btn btn-primary" id="btnsmall">Finalizar Pedido</button>

        </form>
    </div>

</div>